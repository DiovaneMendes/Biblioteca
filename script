case $1 in
  run)
    docker run --name biblioteca-db -p 5432:5432 -e POSTGRES_PASSWORD=biblioteca -d postgres 
  ;;

  start)
    docker container start biblioteca-db 2> /dev/null || ./bancoDocker run
  ;;

  stop)
    docker stop biblioteca-db
  ;;

  rm)
    docker rm biblioteca-db
  ;;

  create)
    docker exec -it biblioteca-db psql -U postgres -c 'CREATE DATABASE biblioteca'
  ;;

  console)
    docker exec -it biblioteca-db psql -U postgres -d biblioteca
  ;;

  php)
    php -S localhost:8080
  ;;

  *)
    echo "nope"
  ;;
esac
